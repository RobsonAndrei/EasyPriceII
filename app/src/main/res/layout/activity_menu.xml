<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/menu_button_cadastrarProduto"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="add"
        android:foreground="@drawable/cadasprodut" />

    <Button
        android:id="@+id/menu_button_buscarProduto"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="add"
        android:foreground="@drawable/logobuscprod" />

    <Button
        android:id="@+id/menu_button_buscarMelhorOferta"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="add"
        android:foreground="@drawable/buscarofert"
        android:foregroundTintMode="add" />


</RelativeLayout>